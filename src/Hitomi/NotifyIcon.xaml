<UserControl x:Class="Hitomi.NotifyIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:tb="http://www.hardcodet.net/taskbar"
             xmlns:local="clr-namespace:Hitomi"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <tb:TaskbarIcon Visibility="Visible"
                    IconSource="{StaticResource Icon}"
                    ContextMenu="{StaticResource Menu}"
                    ToolTipText="Hitomi"
                    TrayMouseDoubleClick="TaskbarIcon_OnTrayDoubleClick">
        <tb:TaskbarIcon.ToolTip>
            <TextBlock Text="Hitomi" />
        </tb:TaskbarIcon.ToolTip>
    </tb:TaskbarIcon>
</UserControl>
